<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/orange3</item>
        <item name="android:actionMenuTextColor">@color/White</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="animationName" parent="android:Animation">
        <item name="android:windowEnterAnimation">@animator/animation_on</item>
        <item name="android:windowExitAnimation">@animator/animation_off</item>
    </style>

    <style name="TextAppearance.App.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/Ivory</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="FacebookLoginButton">
        <item name="android:textSize">20dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>


</resources>
